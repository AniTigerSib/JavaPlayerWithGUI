<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.anitiger.musicplayer.controllers.NewTrackDialogController">
    <VBox prefWidth="500.0">
        <Label text="New Track">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
            <font>
                <Font name="FreeSans Bold" size="26.0" />
            </font>
        </Label>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <Label layoutX="20.0" layoutY="25.0" text="Title">
                <font>
                    <Font name="FreeSans" size="16.0" />
                </font>
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </Label>
            <TextField fx:id="titleField" maxWidth="200.0" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
                <font>
                    <Font size="16.0" />
                </font>
            </TextField>
         <Label layoutX="20.0" layoutY="26.0" text="Author" GridPane.rowIndex="1">
            <font>
               <Font name="FreeSans" size="16.0" />
            </font>
            <GridPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
         </Label>
         <TextField fx:id="authorField" layoutX="200.0" layoutY="20.0" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font>
               <Font size="16.0" />
            </font>
            <GridPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
         </TextField>
         <Label layoutX="20.0" layoutY="76.0" text="Genre" GridPane.rowIndex="2">
            <font>
               <Font name="FreeSans" size="16.0" />
            </font>
            <GridPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
         </Label>
         <TextField fx:id="genreField" layoutX="200.0" layoutY="70.0" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
               <Font size="16.0" />
            </font>
            <GridPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
         </TextField>
            <Label text="Path to file" GridPane.rowIndex="3">
                <font>
                    <Font name="FreeSans" size="16.0" />
                </font>
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </Label>
            <Button fx:id="fileChoseButton" mnemonicParsing="false" onAction="#onFileChose" text="Select file" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
                <font>
                    <Font name="FreeSans" size="16.0" />
                </font>
            </Button>
        </GridPane>
        <HBox alignment="CENTER" prefWidth="200.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
            <Button fx:id="formCancelButton" mnemonicParsing="false" onAction="#onCancel" style="-fx-background-radius: 10;" text="Cancel">
                <HBox.margin>
                    <Insets bottom="20.0" left="20.0" right="40.0" top="20.0" />
                </HBox.margin>
                <font>
                    <Font name="FreeSans" size="16.0" />
                </font>
            </Button>
            <Button fx:id="formAcceptButton" mnemonicParsing="false" onAction="#onAccept" style="-fx-border-style: solid; -fx-border-width: 2; -fx-border-radius: 10; -fx-border-color: #1f7f15; -fx-background-radius: 10;" text="Accept">
                <HBox.margin>
                    <Insets bottom="20.0" left="40.0" right="20.0" top="20.0" />
                </HBox.margin>
                <font>
                    <Font name="FreeSans" size="16.0" />
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
